<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import java.util.ArrayList?>

<BorderPane fx:id="borderPane" prefHeight="810.0" prefWidth="1440.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
						<MenuItem mnemonicParsing="false" text="PLACE_HOLDER" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Edit">
					<items>
						<MenuItem fx:id="undoBtn" mnemonicParsing="false" text="Undo" />
						<MenuItem fx:id="redoBtn" mnemonicParsing="false" text="Redo" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Help">
					<items>
						<MenuItem mnemonicParsing="false" text="PLACE_HOLDER" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<right>
		<TabPane prefHeight="200.0" prefWidth="215.0" tabClosingPolicy="UNAVAILABLE" style="-fx-background-color: #3f3f3f;" BorderPane.alignment="CENTER">
		</TabPane>
	</right>
	<center>
      <VBox>
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="785.0" spacing="20.0">
               <children>
                  <Button fx:id="backBtn" mnemonicParsing="false" text="Back" />
                  <Button fx:id="clearBtn" mnemonicParsing="false" text="Clear" />
                  <RadioButton fx:id="dragRadio" mnemonicParsing="false" selected="true" text="Drag">
                     <toggleGroup>
                        <ToggleGroup fx:id="nodeClick" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="rotateRadio" mnemonicParsing="false" text="Rotate" toggleGroup="$nodeClick" />
                  <RadioButton fx:id="drawRadio" mnemonicParsing="false" text="Draw" toggleGroup="$nodeClick" />
                  <RadioButton fx:id="eraseRadio" mnemonicParsing="false" text="Erase" toggleGroup="$nodeClick" />
                  <RadioButton fx:id="deleteRadio" mnemonicParsing="false" text="Delete" toggleGroup="$nodeClick" />
                  <ColorPicker fx:id="colorPicker" minHeight="25.0" prefHeight="25.0" prefWidth="90.0" />
      			  <Slider fx:id="lineWidthSlider" blockIncrement="1.0" majorTickUnit="10.0" max="30.0" minWidth="200" minorTickCount="9" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
      		<TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" />
         </children>
      </VBox>
	</center>
</BorderPane>
